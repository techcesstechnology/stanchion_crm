rules_version = '2';

service firebase.storage {
  match /b/{bucket}/o {
    // Allow authenticated users to upload logos to the settings folder
    match /settings/{fileName} {
      allow read: if true;  // Anyone can read company logos
      allow write: if request.auth != null;  // Only authenticated users can upload
    }
    
    match /activities/{allPaths=**} {
      allow read: if request.auth != null;
      allow write: if request.auth != null;
    }

    // User signatures
    match /signatures/{userId}/{fileName} {
      allow read: if request.auth != null;
      allow write: if request.auth != null && request.auth.uid == userId;
    }

    // Approval letters - readable by anyone who is authenticated
    match /approval_letters/{collection}/{docId}.pdf {
      allow read: if request.auth != null;
      allow write: if false; // Only Cloud Functions can write via Admin SDK
    }

    // Deny all other access by default
    match /{allPaths=**} {
      allow read, write: if false;
    }
  }
}
